<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><% @title %></title>

    <link rel="stylesheet" href="stylesheets/pure-min.css">
    <link rel="stylesheet" href="stylesheets/fonts.css">
    <link rel="stylesheet" href="stylesheets/book_viewer.css">
</head>

<body>

  <div id="layout">

      <div id="main">
        <div class="header">
          <h2>Directory index</h2>
        </div>

        <div class="content">
          <div class="pure-menu">
              <ul class="pure-menu-list">
              <% @current_dir.each do |item| 
              file = File.basename(item) %>
                <li class="pure-menu-item">
                  <a href="<%= file %>" class="pure-menu-link"><%= file %></a>
                </li>
              <% end %>
              </ul>
          </div><br />

          <% if params['sort_order'] == 'za' %>
          <a href="?sort_order=az">Sort alphabetically</a><br />
          <% else %>
          <a href="?sort_order=za">Sort alphabetically in reverse</a>
          <% end %>
        </div>
      </div>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
